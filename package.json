{
  "name": "proc-env-helper",
  "version": "1.1.0",
  "description": "proc-env-helper when called will require a proc env to be set or throw. Alternatively a default can be set when proc env not found.",
  "licence": "MIT",
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "types": "./build/cjs/index.d.ts",
  "exports": {
    ".": {
      "require": "./build/cjs/index.js",
      "import": "./build/esm/index.js",
      "types": "./build/cjs/index.d.ts"
    }
  },
  "scripts": {
    "install:githooks": "cp ./githooks/* .git/hooks",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "npm run build && jest",
    "test:unit:single": "jest --collect-coverage false",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "build:tocs": "npx doctoc .",
    "build": "rm -fR ./build && npm run build:cjs && npm run build:esm && npm run build:post",
    "build:cjs": "tsc -p tsconfig.cjs.json --declaration --declarationDir build/cjs",
    "build:esm": "tsc -p tsconfig.esm.json --declaration --declarationDir build/esm",
    "build:post": "echo '{\"type\":\"commonjs\"}' > build/cjs/package.json && echo '{\"type\":\"module\"}' > build/esm/package.json",
    "build:watch": "tsc --watch -p .",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/j-d-carmichael/proc-env-helper"
  },
  "keywords": [
    "TypeScript"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^14.18.10",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "eslint": "^8.8.0",
    "eslint-plugin-deprecate": "^0.7.0",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.3.5",
    "tslib": "^2.3.1"
  }
}
